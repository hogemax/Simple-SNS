<% provide(:title, "Sign in") %>
<h1><%=t(".Sign_in")%></h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="actions">
      <%= f.submit t(".Sign_in"), class: "btn btn-large btn-primary" %>
    </div>

    <p><%=t(".New_user?")%><%= link_to t(".Sign_up_now!"), new_user_registration_path %></p>
  </div>
</div>
<% end %>
